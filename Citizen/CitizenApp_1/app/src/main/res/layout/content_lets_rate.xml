<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.mateoj.multiactivitydrawer.LetsRate"
    android:visibility="visible"
    android:background="#FFFFFF"
    >




        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select area"
            android:id="@+id/textView2"

            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginLeft="16dp" />

        <Spinner
            android:layout_height="35dp"

            android:layout_width="match_parent"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"

            android:layout_below="@id/textView2"
            android:background="@drawable/shape"
            android:popupBackground="#FFFFFF"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp" />




    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@id/spinner"
        android:weightSum="1"
        android:paddingLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety at Night"
            android:id="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/ratingBar"
            android:layout_toStartOf="@+id/ratingBar"
            android:layout_alignBottom="@+id/ratingBar"
            android:layout_below="@+id/ratingBar2"
            android:textColor="#262626"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="48dp" />

        <RatingBar
            android:layout_width="241dp"
            android:layout_height="40dp"
            android:id="@+id/ratingBar2"

            android:theme="@style/RatingBar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policing and Patrolling"
            android:id="@+id/textView"
            android:layout_toLeftOf="@+id/ratingBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ratingBar2"
            android:layout_alignBottom="@+id/textView3"
            android:textColor="#262626"
            android:enabled="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="48dp" />

        <RatingBar
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:id="@+id/ratingBar3"
            android:theme="@style/RatingBar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Amenities"
            android:id="@+id/textView4"
            android:layout_toLeftOf="@id/ratingBar3"
            android:layout_below="@id/textView3"
            android:layout_alignBottom="@+id/ratingBar3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#262626"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="48dp" />

        <RatingBar
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:id="@+id/ratingBar"
            android:theme="@style/RatingBar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Overall Saftey"
            android:id="@+id/textView13"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#262626"
            android:layout_marginLeft="48dp" />

        <RatingBar
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:theme="@style/RatingBar"
            android:id="@+id/ratingBar4"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:gravity="top"
            android:hint="Any feedback ?"
            android:background="@drawable/round_corner"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
           />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/submit"
            android:height="50dp"

            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
